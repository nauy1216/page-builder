{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env", "jest"],
    "paths": {
      "wepage-admin/*": ["wepage-admin/src/*"],
      "wepage-web/*": ["wepage-web/src/*"],
      "wepage-components/*": ["wepage-components/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "wepage-admin/src/**/*.ts",
    "wepage-admin/src/**/*.tsx",
    "wepage-admin/src/**/*.vue",
    "wepage-admin/tests/**/*.ts",
    "wepage-admin/tests/**/*.tsx",
    "wepage-web/src/**/*.ts",
    "wepage-web/src/**/*.tsx",
    "wepage-web/src/**/*.vue",
    "wepage-web/tests/**/*.ts",
    "wepage-web/tests/**/*.tsx",
    "wepage-components/*.ts",
    "wepage-components/**/*.ts",
    "wepage-components/**/*.tsx",
    "wepage-components/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
